<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="net.minh137.comunity.mapper.BbsCategoryMapper">

  <select id="selectCategoryByBbsId" parameterType="int" resultType="BbsCategory">
    SELECT * FROM category WHERE bbsid=#{bbsId} ORDER BY categorynum;
  </select>
  
  <insert id="insertCategory" parameterType="net.minh137.comunity.model.BbsCategory">
     insert into bbs_admin
     (bbstitle)
     values
     (#{bbstitle}) 
  </insert>

  <update id="updateCategory" parameterType="net.minh137.comunity.model.BbsCategory">
    UPDATE bbs_admin
    SET
        bbstitle = #{bbstitle},
        skin = #{skin},
        category = #{category},
        listcount = #{listcount},
        pagecount = #{pagecount},
        lgrade = #{lgrade},
        rgrade = #{rgrade},
        fgrade = #{fgrade},
        regrade = #{regrade},
        comgrade = #{comgrade},
        filesize = #{filesize},
        allfilesize = #{allfilesize},
        thimgsize = #{thimgsize},
        imgsize = #{imgsize}
    WHERE id = #{id}
  </update>
 
  <delete id="deleteBbsAdmin" parameterType="int">
     DELETE from bbs_admin where id = #{id}
  </delete>

</mapper>