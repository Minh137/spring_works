<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="net.minh137.comunity.mapper.BbsCategoryMapper">

  <select id="selectCategoryByBbsId" parameterType="int" resultType="BbsCategory">
    SELECT * FROM category WHERE bbsid=#{bbsId} ORDER BY categorynum;
  </select>
  
  <insert id="insertCategory" parameterType="BbsCategory">
     insert into category
     (bbsid, categorytext, categorynum)
     values
     (#{bbsid}, #{categorytext}, #{categorynum}) 
  </insert>

  <update id="updateCategory" parameterType="BbsCategory">
    UPDATE category
    SET
        bbsid = #{bbsid},
        categorytext = #{categorytext},
        categorynum = #{categorynum},
    WHERE id = #{id}
  </update>
 
  <delete id="deleteBbsAdmin" parameterType="int">
     DELETE from bbs_admin where id = #{id}
  </delete>

</mapper>